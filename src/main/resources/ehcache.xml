<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="at.ac.tuwien.translator.domain.User" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Authority" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.User.authorities" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.PersistentToken" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Language" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Definition" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Definition.translations" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Translation" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Translation.languages" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Release" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Release.definitions" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.LogEntry" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Platform" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Project" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Project.definitions" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Project.releases" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Project.users" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Project.platforms" uses-template="simple"/>

    <cache alias="at.ac.tuwien.translator.domain.Project.languages" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
